<h1>Beer clubs</h1>

<%= link_to('New Beer Club', new_beer_club_path) if current_user %>

<div id="beer_clubs">
  <% @beer_clubs.each do |beer_club| %>
    <p>
      <strong>Name:</strong>
      <%= link_to beer_club.name, beer_club %>
    </p>

    <p>
      <strong>Founded:</strong>
      <%= beer_club.founded %>
    </p>

    <p>
      <strong>City:</strong>
      <%= beer_club.city %>
    </p>
  <% end %>
</div>
