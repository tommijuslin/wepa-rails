<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%= link_to beer.name, beer %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= beer.style.name %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= link_to beer.brewery.name, beer.brewery %>
  </p>

  <p>
  <% if beer.ratings.empty? %>
    Beer has not yet been rated!
  <% else %>
    Beer has <%= pluralize(beer.ratings.count, 'rating') %> with an average score of <%= beer.average_rating %>
  <% end %>
  </p>
</div>
