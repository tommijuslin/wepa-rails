<h1>Ratings</h1>

<div class="my-3">
  <%= link_to 'New rating', new_rating_path, class:"btn btn-primary" %>
</div>


<div class="container text-center">
  <div class="row">
    <div class="col-sm-4">
      <%= render "beers/top_beers" %>
    </div>
    <div class="col-sm-4">
      <%= render "breweries/top_breweries" %>
    </div>
  </div>
</div>

<h2>Recent ratings</h2>

<ul>
  <% @ratings.each do |rating| %>
    <li>
      <%= render rating %>
    </li>
  <% end %>
</ul>